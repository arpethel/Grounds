@model IEnumerable<WebApplication1.Models.Resource>;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container" style="color: #3A5E78">
        <div class="row">
            <div class="col-sm card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Repos</h5>
                    <p class="card-text"></p>
                </div>
            </div>
            <div class="col-sm card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">DRI Rotation</h5>
                    <p class="card-text"></p>
                </div>
            </div>
            <div class="col-sm card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Security Groups</h5>
                    <p class="card-text"></p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Jarvis</h5>
                    <p class="card-text"></p>
                </div>
            </div>
            <div class="col-sm card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">IcM</h5>
                    <p class="card-text"></p>
                </div>
            </div>
            <div class="col-sm card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Work Items</h5>
                    <p class="card-text"></p>
                </div>
            </div>
        </div>
        <div class="row my-5">
            <h1 class="display-4 mr-auto">Your Team's Resources</h1>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
            </form>
            <form class="form-inline my-2 my-lg-0">
                <button class="btn btn-info form-inline mx-2 font-weight-bold" type="button">Add resource</button>
            </form>
        </div>
        <div class="row">
            <!--display resources here-->
            <ul>
                @foreach (var item in Model)
                {
                <li>@Html.DisplayFor(modelItem => item.ResourceTitle)</li>
                }
            </ul>
        </div>
    </div>
</div>
